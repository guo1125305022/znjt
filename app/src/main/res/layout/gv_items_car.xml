<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/ll_rect"
    android:orientation="horizontal">


    <TextView
        android:ems="10"
        android:id="@+id/tv_item_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_weight="2"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_marginStart="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:ems="10"
        android:id="@+id/tv_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_above="@+id/tv_item_values"
        android:layout_alignLeft="@+id/tv_item_grid"
        android:layout_alignStart="@+id/tv_item_grid" />

    <TextView
        android:id="@+id/tv_item_values"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_weight="1"
        android:background="@drawable/bg_over"
        android:gravity="center"
        android:textSize="20sp" />


</RelativeLayout>