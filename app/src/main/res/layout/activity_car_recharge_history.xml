<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_car_recharge_recover"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="账单记录"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/sp_car_rechare_sort"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_car_rechager_history_recory"
        android:layout_toEndOf="@+id/tv_car_recharge_recover"
        android:layout_toLeftOf="@+id/btn_car_rechager_history_recory"
        android:layout_toRightOf="@+id/tv_car_recharge_recover" />

    <Button
        android:id="@+id/btn_car_rechager_history_recory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_car_recharge_recover"
        android:text="查询" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_car_rechager_history_recory"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="序号" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="车号" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="充值金额（元）" />

            <TextView
                android:layout_width="1dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="操作人" />

            <TextView
                android:layout_width="1dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="充值时间" />

            <TextView
                android:layout_width="1dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:background="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_car_rechager_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4" />
</RelativeLayout>